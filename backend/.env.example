# Server Configuration
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/apimetrics

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production

# CORS
CORS_ORIGIN=https://apimetrics.dev,https://www.apimetrics.dev

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=alerts@apimetrics.dev
SENDGRID_FROM_NAME=APImetrics Alerts

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
